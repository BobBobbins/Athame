<UserControl x:Class="AthameWPF.UI.Controls.PrimaryTabNavigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AthameWPF.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Background="{StaticResource MainNavBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Name="TabsPanel">
            <DockPanel.Resources>
                <Style TargetType="local:PathToggleButton">
                    <EventSetter Event="Checked" Handler="SwitcherButtonOnChecked" />
                </Style>
            </DockPanel.Resources>
        </DockPanel>
        <Canvas Grid.Row="1" 
                    Background="{StaticResource MainNavIndicatorBrush}" 
                    x:Name="MainSwitcherSelectionIndicator" 
                    Width="1"
                    HorizontalAlignment="Left" Loaded="MainSwitcherSelectionIndicator_Loaded"/>
    </Grid>
</UserControl>
